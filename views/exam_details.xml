    <!-- Tree view -->
    <record id="exam_details_tree_view" model="ir.ui.view">
        <field name="name">exam.details.tree.view</field>
        <field name="model">exam.details</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="exam_type"/>
            </tree>

        </field>
    </record>
    <!-- Form -->
    <record id="exam_details_form_view" model="ir.ui.view">
        <field name="name">Exam Details</field>
        <field name="model">exam.details</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Exam">
                <header>
                    <button name="create_student_results" string="Add Students" help="Click here to add students of the selected batch" type="object" class="oe_highlight" attrs="{'invisible': [('students_added','=',True)]}"/>
                    <button name="reset_student_results" string="Reset Students" confirm="This will remove all the result records of the current exam" help="Clear all the result records of students appeared in this exam" type="object" class="oe_highlight" attrs="{'invisible': [('students_added','=',False)]}"/>
                </header> 
                <sheet>
                    <group>
                        <group>
                            <field name="students_added" invisible="1"/>
                            <field name="name"/>
                            <field name="date"/>
                            <field name="exam_type"/>
                            <field name="quart_percent" attrs="{'invisible': [('exam_type','!=','quarterly')]}"/>
                            <field name="topic" attrs="{'invisible': [('exam_type','!=','topic')]}"/>
                            <field name="batch"/>
                            <field name="classroom"/>
                            <field name="faculty" options="{'no_create': True, 'no_create_edit':True}"/>

                        </group>
                        <group>
                            <field name="coordinator" string="Coordinator"/>
                            <field name="total_marks"/>
                            <field name="pass_mark"/>
                            <field name="average_marks"/>
                            <field name="present_students"/>
                            <field name='pass_percentage' invisible="0"/>
                            <field name='fail_percentage' invisible="0"/>
                            <!-- <field name='_percentage'/> -->
                        </group>
                        <group>
                            <notebook>
                                <page string="Students">
                                        <field name="student_results" context = "{'parent_id': active_id, 'parent_model': 'exam.details'}" domain="[('exam_id', '=', active_id)]" >
                                            <tree editable="bottom" create="0"> 
                                                <field name = "student_id"/>
                                                <field name = "marks"/>
                                                <field name = "present"/>
                                            </tree>
                                        </field>
                                </page>
                            </notebook>
                        </group>
                        <group>
                            <!-- <div> -->
                                <field name="bokeh_chart" widget="bokeh_chart" nolabel="1"/>
                            <!-- </div> -->
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="exam_details_search" model="ir.ui.view">
        <field name="name">exam.details.search</field>
        <field name="model">exam.details</field>
        <field name="arch" type="xml">
            <search>
                <group expand="0" string="Group By">
                    <filter string="Batch" name="batch" context="{'group_by': 'batch'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
